{
  "name": "frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "download-schema": "curl http://localhost:8000/openapi.json -o openapi.json",
    "generate-api": "docker run --rm -v \"${PWD}:/local\" openapitools/openapi-generator-cli:latest generate -i /local/openapi.json -g typescript-axios -o /local/src/api/generated --additional-properties=supportsES6=true,npmName=panini-api,withInterfaces=true,typescriptThreePlus=true",
    "generate-api:direct": "openapi-generator-cli generate -i http://localhost:8000/openapi.json -g typescript-axios -o src/api/generated --additional-properties=supportsES6=true,npmName=panini-api,withInterfaces=true,typescriptThreePlus=true",
    "api:download-and-generate": "npm run download-schema && npm run generate-api"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "@tanstack/react-query": "^5.62.3",
    "axios": "^1.7.9"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.5.2",
    "eslint": "^9.29.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.34.1",
    "vite": "^7.0.0",
    "@openapitools/openapi-generator-cli": "^2.15.0",
    "@types/node": "^22.13.0"
  }
}
